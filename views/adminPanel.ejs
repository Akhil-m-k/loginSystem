<div class="table_container">
    <div class="SearchForm_container">
        <form id="searchForm" action="/api/search" method="post">           
            <input type="email" id="email" name="email" placeholder="Enter email">
            <button type="submit">Search</button>
        </form>
    </div>
    <table id="userTable">
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>profile</th>
            <th>Edit</th>
            <th>delete</th>
        </tr>
        <% users.forEach((user)=>{ %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.password %></td>
                <td><%= user.email %></td>
                <td><img src="/<%= user.avatar %>" alt="" width="50px" height="50px" style="border-radius: 50%;"></td>
                <td><a href="/api/userEdit/<%= user._id %>" class="edit_btn"><i class="fa-regular fa-pen-to-square"></i></a></td>
                <td><a href="/api/adminPanel" onclick="deleteUser('<%= user._id %>')" class="delete_btn"><i class="fa fa-solid fa-trash-can"></i></a></td>
            </tr>
        <% }) %>
    </table>
